# EditorConfig is awesome: http://EditorConfig.org

# No .editorconfig files above the root directory
root = true

# Global settings
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Indentation override for all TS files in src
[*.{js,ts,json}]
indent_style = space
indent_size = 2

